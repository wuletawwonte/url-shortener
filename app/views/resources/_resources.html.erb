<%= turbo_frame_tag "resources" do %>

  <div class="flex flex-col container max-w-xl mt-10 mx-auto w-full items-center justify-center bg-white dark:bg-gray-800" data-controller="clipboard">
    <ul class="flex flex-col divide-y w-full">
      <% @resources.each do |resource| %>
        <li class="flex flex-row">
          <div class="select-none cursor-pointer hover:bg-gray-50 flex flex-1 items-center p-4">
            <div class="flex-1 pl-1">
              <%= link_to resource.long_url, class: "font-medium dark:text-white", target: "_blank", data: { turbo_frame: "_top"} %>
              <div class="text-gray-600 dark:text-gray-200 text-sm">Count: <%= resource.clicked %></div>
            </div>
            <div class="flex flex-row justify-center items-center gap-2">
              <%= link_to "#{url_for(resource.short_url)}", "/url/#{url_for(resource.short_url)}", data: { turbo_frame: "_top"}, target: "_blank", class: "text-purple-600 text-sm" %>

              <button class="w-10 text-right flex justify-end">
                Copy
              </button>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate resources %>
  </div>
<% end %>